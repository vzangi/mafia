doctype html
html 
  head
    include ../includes/head
    link(href="/css/grey.css" rel="stylesheet")
    block head

    if !currentAccount || (currentAccount && currentAccount.skin == 1)
      link(rel='stylesheet' href='/css/skin/dark.css')

    if currentAccount && currentAccount.vip == 1 && currentAccount.bg
      style= `body{background-image: url(/uploads/${currentAccount.bg})}`

  body 
    div(class="wrapper")
      div(class="content")

        include ../includes/header

        main
          block content

      include ../includes/footer

  script(src="/js/vendor/notifier.js")

  block scripts 