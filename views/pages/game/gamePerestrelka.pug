extends /layouts/two_column_6_6

block head 
  link(href="/css/game/base.css" rel="stylesheet")
  link(href="/css/game/chat.css" rel="stylesheet")
  link(href="/css/game/perestrelka.css" rel="stylesheet")

prepend content 
  include /includes/game/loader
  include /includes/game/header

block main
  include /includes/game/chat

block aside 
  include /includes/game/perestrelka/players



block scripts 
  include /includes/game/game-tmpl
  script(src="/js/game/perestrelka/base.js")
  script(src="/js/game/chat.js")
