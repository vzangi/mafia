extends /layouts/one_column

block head 
  link(href="/css/profile/profile.css" rel="stylesheet")
  link(href="/css/profile/inventory.css" rel="stylesheet")

block main
  include /includes/profile/inventory/head

  include /includes/profile/inventory/things

  if currentAccount && profile.id == currentAccount.id
    include /includes/profile/inventory/kraft-form-tmpl
    include /includes/profile/inventory/form-tmpl
    include /includes/profile/inventory/sell-form
  else 
    include /includes/profile/inventory/other-form-tmpl

block scripts 
  include /includes/profile/inventory/thing-tmpl
  script(src="/js/profile/inventory/inventory.js")
  script(src="/js/profile/inventory/filter.js")
  if currentAccount && profile.id == currentAccount.id
    script(src="/js/profile/inventory/trading.js")
    script(src="/js/profile/inventory/kraft.js")