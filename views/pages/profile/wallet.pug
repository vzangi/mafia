extends /layouts/two_column_9_3

block head 
  link(href="/css/wallet.css" rel="stylesheet")

prepend content
  include /includes/wallet/adjunction
  include /includes/wallet/wallet_form

block article 
  div(class="block mb-5")
    article
      p(class="transations-title") История транзакций (#[span(class="total-transactions")= eventCount])

      table(class="w-100 table m-0")
        tbody(class="transactions" data-onPage=eventsOnPage)

block aside 
  h3 Перевод*
  div(class="block p-3") 
    form(method="post" id="transferForm") 
      div(class="mb-2")
        input(type="text" name="username" class="form-control" placeholder="Получатель" required)
      div(class="mb-2")
        input(type="number" name="count" class="form-control" placeholder="Сумма (от 1 до 5000)" min="1" max="5000" required)
      div(class="mb-2")
        button(type="submit" class="btn btn-sm btn-success w-100") Перевести
  div(class="text-secondary") 
    small * комиссия за перевод составляет 10% от суммы перевода

block scripts 
  include /includes/wallet/eventTmpl
  script(src="/js/wallet.js")