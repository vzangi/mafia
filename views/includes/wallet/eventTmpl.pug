        {{else eventType == 1}}
      span(class="minus") ${value}
      .
        {{else eventType == 2}}
      span(class="plus") +${value}
      .
        {{else eventType == 3}}
      span(class="minus") ${value}
      .
        {{else eventType == 4}}
      span(class="plus") +${value}
      .
        {{else eventType == 7}}
      span(class="minus") ${value}
      .
        {{else eventType == 8}}
      span(class="minus") ${value}
      .
        {{else eventType == 9}}
      span(class="minus") ${value}
      .
        {{/if}}

