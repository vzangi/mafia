      img(src="/images/eBottle.svg")
      . 
        {{/if}}
        {{if eventType == 2}}
      img(src="/images/eDoge.svg")
      . 
        {{/if}}
        {{if eventType == 3}}
      img(src="/images/eCatCry.svg")
      . 
